---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={['services-list', className]}>
  <div class="service-item service-item--fade-5">Product Design</div>
  <div class="service-item service-item--fade-4">User Experience</div>
  <div class="service-item service-item--fade-3">Brand Development & Strategy</div>
  <div class="service-item service-item--fade-2">Service & Experience Design</div>
  <div class="service-item service-item--active">
    <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
      <path d="M4 14H24M24 14L18 8M24 14L18 20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    Organisational Transformation
  </div>
  <div class="service-item service-item--fade-3">Website Design & Development</div>
  <div class="service-item service-item--fade-4">Strategy & Future Planning</div>
  <div class="service-item service-item--fade-5">Design Research</div>
  <div class="service-item service-item--fade-5">Design Thinking Methodology</div>
</div>

<style>
  .services-list {
    display: flex;
    flex-direction: column;
    gap: 7px;
    justify-content: center;
  }

  .service-item {
    font-family: var(--font-primary);
    font-size: 32px;
    font-weight: 700;
    line-height: 1.3;
    letter-spacing: -0.32px;
    white-space: pre-wrap;
    min-width: 100%;
  }

  .service-item--fade-5 {
    color: #e8c352;
  }

  .service-item--fade-4 {
    color: #d6b44d;
  }

  .service-item--fade-3 {
    color: #c5a546;
  }

  .service-item--fade-2 {
    color: #a18739;
  }

  .service-item--active {
    color: var(--text-standard);
    display: flex;
    align-items: center;
    gap: 7px;
  }

  .service-item--active svg {
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .service-item {
      font-size: 24px;
    }
  }
</style>

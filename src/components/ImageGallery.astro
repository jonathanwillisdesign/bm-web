---
interface Props {
  variant?: 'a' | 'b' | 'c';
  images: {
    src: string;
    alt: string;
  }[];
  class?: string;
}

const { variant = 'a', images, class: className } = Astro.props;
---

{variant === 'a' && (
  <div class:list={['image-gallery', 'image-gallery--a', className]}>
    <div class="image-gallery__item image-gallery__item--1">
      <img src={images[0]?.src} alt={images[0]?.alt || ''} />
    </div>
    <div class="image-gallery__item image-gallery__item--2">
      <img src={images[1]?.src} alt={images[1]?.alt || ''} />
    </div>
    <div class="image-gallery__item image-gallery__item--3">
      <img src={images[2]?.src} alt={images[2]?.alt || ''} />
    </div>
    <div class="image-gallery__item image-gallery__item--4">
      <img src={images[3]?.src} alt={images[3]?.alt || ''} />
    </div>
  </div>
)}

{variant === 'b' && (
  <div class:list={['image-gallery', 'image-gallery--b', className]}>
    <div class="image-gallery__item image-gallery__item--1">
      <img src={images[0]?.src} alt={images[0]?.alt || ''} />
    </div>
    <div class="image-gallery__item image-gallery__item--2">
      <img src={images[1]?.src} alt={images[1]?.alt || ''} />
    </div>
    <div class="image-gallery__item image-gallery__item--3">
      <img src={images[2]?.src} alt={images[2]?.alt || ''} />
    </div>
    <div class="image-gallery__item image-gallery__item--4">
      <img src={images[3]?.src} alt={images[3]?.alt || ''} />
    </div>
  </div>
)}

{variant === 'c' && (
  <div class:list={['image-gallery', 'image-gallery--c', className]}>
    <div class="image-gallery__item image-gallery__item--1">
      <img src={images[0]?.src} alt={images[0]?.alt || ''} />
    </div>
    <div class="image-gallery__item image-gallery__item--2">
      <img src={images[1]?.src} alt={images[1]?.alt || ''} />
    </div>
    <div class="image-gallery__item image-gallery__item--3">
      <img src={images[2]?.src} alt={images[2]?.alt || ''} />
    </div>
    <div class="image-gallery__item image-gallery__item--4">
      <img src={images[3]?.src} alt={images[3]?.alt || ''} />
    </div>
  </div>
)}

<style>
  .image-gallery {
    position: relative;
    width: 100%;
    height: 859px;
    overflow: hidden;
  }

  .image-gallery__item {
    position: absolute;
    overflow: hidden;
  }

  .image-gallery__item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Variant A */
  .image-gallery--a .image-gallery__item--1 {
    left: 0;
    top: 45.61px;
    width: 344.121px;
    height: 362.782px;
  }

  .image-gallery--a .image-gallery__item--2 {
    left: 20.35%;
    right: 43.72%;
    top: 20.14%;
    bottom: 6.73%;
    width: auto;
    height: auto;
  }

  .image-gallery--a .image-gallery__item--3 {
    left: 81.6%;

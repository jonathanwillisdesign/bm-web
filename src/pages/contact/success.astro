---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Section from '../../components/Section.astro';
import Button from '../../components/Button.astro';
---

<BaseLayout
  title="Thank You - Big Motive"
  description="We've received your message and will get back to you within 24 hours."
>
  <Section variant="standard">
    <div class="success-content">
      <h1 class="heading-medium">Thank You!</h1>
      <p class="body-large">We've received your message and will get back to you within 24 hours.</p>
    </div>
  </Section>

  <Section variant="light">
    <div class="next-steps">
      <h2 class="body-large-bold">What happens next?</h2>
      <ol class="steps-list">
        <li class="body-medium">We'll review your project details</li>
        <li class="body-medium">A team member will reach out to discuss your needs</li>
        <li class="body-medium">We'll schedule a consultation call if it's a good fit</li>
        <li class="body-medium">We'll provide you with a detailed proposal</li>
      </ol>

      <div class="actions">
        <Button variant="primary" href="/">Return to Homepage</Button>
        <Button variant="secondary" href="/work">View Our Work</Button>
      </div>
    </div>
  </Section>
</BaseLayout>

<style>
  .success-content {
    display: flex;
    flex-direction: column;
    gap: var(--content-gap-small);
    text-align: center;
    align-items: center;
    width: 100%;
  }

  .next-steps {
    display: flex;
    flex-direction: column;
    gap: var(--content-gap-medium);
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  .steps-list {
    list-style: decimal;
    padding-left: 24px;
    display: flex;
    flex-direction: column;
    gap: var(--content-gap-small);
  }

  .actions {
    display: flex;
    gap: var(--content-gap-small);
    justify-content: center;
    flex-wrap: wrap;
    margin-top: var(--content-gap-small);
  }

  @media (max-width: 768px) {
    .actions {
      flex-direction: column;
    }
  }
</style>

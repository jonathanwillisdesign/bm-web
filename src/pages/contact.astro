---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
import TextBlock from '../components/TextBlock.astro';
import Button from '../components/Button.astro';
---

<BaseLayout
  title="Contact Us - Big Motive"
  description="Ready to start your project? Let's talk about how we can help."
>
  <Section variant="standard">
    <TextBlock
      title="Get in Touch"
      description="Ready to start your project? Let's talk about how we can help you achieve your goals."
    />
  </Section>

  <Section variant="light">
    <form method="POST" action="/contact/success" class="contact-form">
      <div class="form-row">
        <div class="form-group">
          <label for="name" class="body-medium">Name *</label>
          <input type="text" id="name" name="name" required class="form-input" />
        </div>

        <div class="form-group">
          <label for="email" class="body-medium">Email *</label>
          <input type="email" id="email" name="email" required class="form-input" />
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="company" class="body-medium">Company</label>
          <input type="text" id="company" name="company" class="form-input" />
        </div>

        <div class="form-group">
          <label for="phone" class="body-medium">Phone</label>
          <input type="tel" id="phone" name="phone" class="form-input" />
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="project-type" class="body-medium">Project Type</label>
          <select id="project-type" name="project-type" class="form-input">
            <option value="">Select a project type</option>
            <option value="product-design">Product Design</option>
            <option value="user-experience">User Experience</option>
            <option value="brand-development">Brand Development</option>
            <option value="service-design">Service Design</option>
            <option value="website-development">Website Development</option>
            <option value="other">Other</option>
          </select>
        </div>

        <div class="form-group">
          <label for="budget" class="body-medium">Budget Range</label>
          <select id="budget" name="budget" class="form-input">
            <option value="">Select a budget range</option>
            <option value="under-25k">Under £25k</option>
            <option value="25k-50k">£25k - £50k</option>
            <option value="50k-100k">£50k - £100k</option>
            <option value="over-100k">Over £100k</option>
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="timeline" class="body-medium">Timeline</label>
        <select id="timeline" name="timeline" class="form-input">
          <option value="">When do you need this completed?</option>
          <option value="asap">ASAP</option>
          <option value="1-3-months">1-3 months</option>
          <option value="3-6-months">3-6 months</option>
          <option value="6-12-months">6-12 months</option>
          <option value="flexible">Flexible</option>
        </select>
      </div>

      <div class="form-group">
        <label for="message" class="body-medium">Project Details *</label>
        <textarea
          id="message"
          name="message"
          rows="6"
          required
          class="form-input"
          placeholder="Tell us about your project, goals, and any specific requirements..."
        ></textarea>
      </div>

      <Button variant="primary">Send Message</Button>
    </form>
  </Section>

  <Section variant="standard">
    <div class="contact-info">
      <div class="contact-info-item">
        <h3 class="body-large-bold">Email</h3>
        <p class="body-medium"><a href="mailto:hello@bigmotive.com">hello@bigmotive.com</a></p>
      </div>

      <div class="contact-info-item">
        <h3 class="body-large-bold">Phone</h3>
        <p class="body-medium"><a href="tel:+442890123456">+44 (0) 28 9012 3456</a></p>
      </div>

      <div class="contact-info-item">
        <h3 class="body-large-bold">Belfast Office</h3>
        <p class="body-medium">
          Big Motive<br>
          Belfast, Northern Ireland<br>
          United Kingdom
        </p>
      </div>

      <div class="contact-info-item">
        <h3 class="body-large-bold">Dublin Office</h3>
        <p class="body-medium">
          Big Motive<br>
          Dublin, Ireland
        </p>
      </div>
    </div>
  </Section>
</BaseLayout>

<style>
  .contact-form {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--content-gap-medium);
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--content-gap-medium);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--content-gap-tiny);
  }

  .form-group label {
    font-weight: 600;
  }

  .form-input {
    padding: 15px 20px;
    border: 2px solid var(--border-standard);
    border-radius: var(--radius-medium);
    font-family: var(--font-primary);
    font-size: var(--body-medium-size);
    background-color: var(--surface-standard);
    color: var(--text-standard);
    transition: border-color var(--transition-fast);
  }

  .form-input:focus {
    outline: none;
    border-color: var(--text-standard);
  }

  textarea.form-input {
    resize: vertical;
    min-height: 120px;
  }

  .contact-info {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--content-gap-large);
    width: 100%;
  }

  .contact-info-item {
    display: flex;
    flex-direction: column;
    gap: var(--content-gap-tiny);
  }

  .contact-info-item a {
    color: var(--text-standard);
    text-decoration: underline;
  }

  .contact-info-item a:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-info {
      grid-template-columns: 1fr;
      gap: var(--content-gap-medium);
    }
  }
</style>
